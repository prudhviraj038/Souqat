<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green"
                android:gravity="center"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/ap_back"
                    android:src="@drawable/back"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:id="@+id/textView37"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/back"
                    android:tint="#000"
                    android:visibility="invisible" />
            </LinearLayout>

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewFlipper" >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView"
                    android:nestedScrollingEnabled="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Title"
                                    android:id="@+id/textView7"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/et_p_title"
                                        android:background="#00000000"
                                        android:layout_margin="7dp"
                                        android:textColor="@color/black" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Title Arabic"
                                    android:id="@+id/textView8"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/et_p_title_ar"
                                        android:background="#00000000"
                                        android:layout_margin="7dp"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:id="@+id/textView9"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@drawable/white_rounded_corners_with_bo"
                                    android:gravity="center_vertical"
                                    android:id="@+id/cat_ll_ap">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:id="@+id/cat_tv_ap"
                                        android:background="#00000000"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:textSize="15sp"
                                        android:layout_margin="7dp"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/imageView2"
                                        android:src="@drawable/down_arrow"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:tint="#55000000" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:id="@+id/textView11"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/et_p_price"
                                        android:background="#00000000"
                                        android:layout_weight="1"
                                        android:layout_margin="7dp"
                                        android:inputType="number"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="KD"
                                        android:id="@+id/textView16"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:textSize="15sp"
                                        android:gravity="center" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stock"
                                    android:id="@+id/textView12"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@drawable/white_rounded_corners_with_bo"
                                    android:gravity="center_vertical"
                                    android:id="@+id/p_stock_ll">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/p_stock_tv"
                                        android:background="#00000000"
                                        android:layout_weight="1"
                                        android:layout_margin="7dp"
                                        android:textSize="15sp"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/imageView"
                                        android:src="@drawable/down_arrow"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:tint="#55000000" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_rounded_corners_with_bo"
                                android:showDividers="middle"
                                android:divider="@drawable/stock_height_divider"
                                android:id="@+id/stock_pop"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="In Stock"
                                    android:id="@+id/in_stock_tv"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:layout_margin="5dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Low Stock"
                                    android:id="@+id/low_stock_tv"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:layout_margin="5dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Out of Stock"
                                    android:id="@+id/out_stock_tv"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:layout_margin="5dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Small Description"
                                    android:id="@+id/textView13"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:id="@+id/et_p_sd"
                                        android:background="#00000000"
                                        android:minLines="3"
                                        android:gravity="top"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Small Description Arabic"
                                    android:id="@+id/textView14"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/et_p_sd_ar"
                                        android:background="#00000000"
                                        android:minLines="3"
                                        android:layout_margin="5dp"
                                        android:gravity="top"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description "
                                    android:id="@+id/textView15"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/et_p_d"
                                        android:background="#00000000"
                                        android:minLines="5"
                                        android:gravity="top"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description Arabic"
                                    android:id="@+id/textView15"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_rounded_corners_with_bo" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ems="10"
                                        android:id="@+id/et_p_d_ar"
                                        android:background="#00000000"
                                        android:minLines="5"
                                        android:layout_margin="5dp"
                                        android:gravity="top"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="end"
                                android:layout_marginTop="25dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/color_rounded_corners_with_bo"
                                    android:id="@+id/next1_ll">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Next"
                                        android:id="@+id/textView"
                                        android:textColor="#ffffff"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="5dp"
                                        android:textSize="15sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/color_rounded_corners_with_bo"
                            android:id="@+id/linearLayout" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add  Group"
                                android:id="@+id/add_group_tv"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            class="android.support.v7.widget.RecyclerView"
                            android:id="@+id/recycler_view" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/color_rounded_corners_with_bo"
                            android:id="@+id/next2_ll" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Next"
                                android:id="@+id/textView2"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/color_rounded_corners_with_bo"
                            android:id="@+id/linearLayout4" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Option"
                                android:id="@+id/add_option_tv"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <view
                            class="android.support.v7.widget.RecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/options_rlv" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginTop="25dp" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/color_rounded_corners_with_bo"
                            android:id="@+id/save_nbtn_ll" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add"
                                android:id="@+id/textView10"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gv_img"
                        android:layout_margin="10dp"
                        android:numColumns="2"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Image"
                        android:id="@+id/add_image_tv"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:background="@drawable/white_rounded_corners">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:id="@+id/add_image_img" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:id="@+id/imageView4" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/color_rounded_corners_with_bo"
                            android:id="@+id/save_final_ll" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:id="@+id/save_final"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </ViewFlipper>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/green"
            android:divider="@drawable/footer_divider"
            android:showDividers="middle" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/p4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product List"
                    android:id="@+id/textView30"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/o4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders List"
                    android:id="@+id/textView33"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/s4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:id="@+id/textView34"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>